{
  "name": "elecrun",
  "version": "2.4.8",
  "description": "elecrun is a tool to run your electron app easily.",
  "main": "build/src/index.js",
  "bin": {
    "elecrun": "bin/elecrun.js",
    "electron-run": "bin/elecrun.js"
  },
  "repository": "https://github.com/jctaoo/elecrun",
  "license": "MIT",
  "keywords": [
    "typescript",
    "esbuild",
    "vite",
    "electron"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "xvfb-maybe run-s test:lint test:prettier test:unit",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "doc": "vite docs",
    "version": "standard-version",
    "version:major": "standard-version -r major",
    "version:minor": "standard-version -r minor",
    "version:patch": "standard-version -r patch",
    "tsx": "tsx",
    "electron": "electron"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "colorette": "^2.0.16",
    "commander": "^7.2.0",
    "esbuild": "^0.25.0",
    "process-exists": "^5.0.0",
    "vite": "^7.1.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "^22.17.2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "electron": "^37.3.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "standard-version": "^9.3.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "xvfb-maybe": "^0.2.1"
  },
  "files": [
    "build/",
    "build/package.json",
    "!tests/**/*.test.ts",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "electron": ">=30.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "packageManager": "pnpm@9.15.2"
}
