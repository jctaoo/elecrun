{
  "name": "elecrun",
  "version": "2.4.5",
  "description": "elecrun is a tool to run your electron app easily.",
  "main": "build/src/index.js",
  "bin": {
    "elecrun": "bin/elecrun.js",
    "electron-run": "bin/elecrun.js"
  },
  "repository": "https://github.com/jctaoo/elecrun",
  "license": "MIT",
  "keywords": [
    "typescript",
    "esbuild",
    "vite",
    "electron"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "xvfb-maybe run-s test:lint test:prettier test:unit",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "tsx": "tsx",
    "electron": "electron",
    "cov": "run-s test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 20 --functions 20 --branches 20",
    "doc": "vite docs",
    "version": "standard-version",
    "version:major": "standard-version -r major",
    "version:minor": "standard-version -r minor",
    "version:patch": "standard-version -r patch",
    "prepublishOnly": "run-s test"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "colorette": "^2.0.16",
    "commander": "^7.2.0",
    "esbuild": "^0.14.11",
    "process-exists": "^4.0.0",
    "vite": "^7.1.3"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^22.17.2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "codecov": "^3.8.3",
    "cspell": "^5.15.2",
    "electron": "^37.3.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "xvfb-maybe": "^0.2.1"
  },
  "files": [
    "build/",
    "build/package.json",
    "!tests/**/*.test.ts",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "electron": ">=11.0.0"
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "tests/": "build/tests/"
      }
    },
    "files": [
      "!build/module/**",
      "tests/**/*.test.ts"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "tests/**/*.test.js"
    ]
  },
  "packageManager": "pnpm@9.15.2"
}
